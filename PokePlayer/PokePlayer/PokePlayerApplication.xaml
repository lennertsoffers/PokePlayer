<Window x:Class="PokePlayer.PokePlayerApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokePlayer"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        
        Title="PokePlayer" Height="850" Width="1200">


	<Grid Background="#f2e8cf">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

		<Frame x:Name="navBar" NavigationUIVisibility="Hidden" Grid.Row="0"/>
		<Frame x:Name="mainContent" NavigationUIVisibility="Hidden" Grid.Row="1"/>
		<Frame x:Name="fullScreen" NavigationUIVisibility="Hidden" Grid.Row="0" Grid.RowSpan="2"/>
	</Grid>
</Window>
