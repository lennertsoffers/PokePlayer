					</Style.Triggers>
				</Style>
			</Button.Resources>
		</Button>

		<Grid Column="3" Background="#6a994e"></Grid>

		<Button  Grid.Column="4"
		         Content="Logout">
			<Button.Triggers>
				<EventTrigger RoutedEvent="TextBlock.MouseEnter">
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetProperty="(TextBlock.FontSize)"
